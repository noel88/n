<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.blog.mapper.blogMapper">


	<insert id="create">
		insert into blog value(#{no}, #{title}, #{name}, #{now}, #{context}, #{cnt})
	</insert>

	<select id="list" resultType="org.blog.domain.BlogVO">

		select * from blog

	</select>

	<select id="selectList" resultType="org.blog.domain.BlogVO">

		select * from blog where no = #{no}
	</select>

	<insert id="update_cnt">
		update blog set cnt = cnt+1 where no = #{no}
	</insert>


</mapper>