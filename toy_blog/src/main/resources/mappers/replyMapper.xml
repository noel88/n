<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.blog.mapper.replyMapper">


	<insert id="comment">
		insert into reply value(#{reply_no}, #{blog_no}, #{reply_name}, #{comment}, #{comment_now})
	</insert>

	<select id="list" resultType="org.blog.domain.ReplyVO">
		select * from reply WHERE blog_no = #{blog_no} 
	</select>
	
	<select id="comment_count" parameterType = "org.blog.domain.ReplyVO" resultType="java.lang.Integer">
		SELECT IFNULL(COUNT(*),0) FROM reply WHERE blog_no = #{blog_no} 
	</select>
	


</mapper>